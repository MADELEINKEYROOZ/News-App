<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip">

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="30dp">
        <ImageView android:id="@+id/arrow" android:contentDescription="@string/app_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentStart="true" android:layout_centerVertical="true" android:src="@drawable/ic_baseline_keyboard_arrow_left_24" />
    </LinearLayout>

    <ImageView
        android:id="@+id/arThb"
        android:contentDescription="@string/app_name"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/news1" />

    <TextView
        android:id="@+id/arTitle"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:gravity="right"
        android:paddingBottom="10dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/arDate"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/arTitle"
        android:layout_marginStart="25dp"
        android:layout_alignRight="@id/arTitle"
        android:textColor="#cc0000"
        android:textSize="15sp"
        android:gravity="right"/>
</RelativeLayout>